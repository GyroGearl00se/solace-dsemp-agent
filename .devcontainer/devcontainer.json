{
  "name": "solace-dsemp-agent-dev",
  "image": "mcr.microsoft.com/devcontainers/go:1.25",
  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/jungaretti/features/make": {},
    "ghcr.io/lentzi90/features/yamlfmt": {},
  },
  "containerEnv": {
    "WORKSPACE_LOCALDIR": "${localWorkspaceFolder}"
  },
  "customizations": {
    "vscode": {
      "settings": {
        "go.toolsManagement.autoUpdate": true,
        "go.useLanguageServer": true
      },
      "extensions": [
        "golang.Go",
        "tamasfe.even-better-toml",
        "mhutchie.git-graph"
      ]
    }
  }
}
